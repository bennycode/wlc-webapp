<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                                  http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
  <application>
    <locale-config>
      <default-locale>de</default-locale>
      <supported-locale>en</supported-locale>
    </locale-config> 
    
    <resource-bundle>
      <base-name>com.welovecoding.texts.backend</base-name>
      <var>backend</var>
    </resource-bundle>
    
    <resource-bundle>
      <base-name>com.welovecoding.texts.frontend</base-name>
      <var>frontend</var>
    </resource-bundle>
    
    <resource-bundle>
      <base-name>com.welovecoding.texts.index</base-name>
      <var>index</var>
    </resource-bundle>    
  </application>
  
  <lifecycle>
    <phase-listener>com.welovecoding.tutorial.view.filter.LanguageFilter</phase-listener>
  </lifecycle>
  
</faces-config>
